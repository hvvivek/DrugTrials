<%= render "menu" %>
<div class="container-fluid" id="main-content">

    <section class="col-md-7" id="carousel-container" >
        <%= render "carousel" %>
    </section>


    <section class="col-md-5" id="info-container">
        <section id="title-bar">
            <div class="sign-in-register col-md-12"><span class="pull-right clearfix"><a>Sign In</a> | <a> Register</a></span></div>
            <h1 class="visible-xs visible-sm ">Find Clinical Trial</h1>
            <h4 class="visible-xs visible-sm">Search for a Clinical Trial near you</h4>

            <h1 class="text-center visible-md visible-lg">Find Clinical Trial</h1>
            <h4 class="text-muted text-center visible-md visible-lg">Search for a Clinical Trial near you</h4>
        </section>
        
        <section class="col-md-12 col-lg-10 col-lg-offset-1 info-bar"></section>
        
        <form class="col-md-10 col-md-offset-1"  id="search-form">

            <div class="form-group">
                <label for="locationInput">Location</label>
                <input type="location" class="form-control" id="locationInput" placeholder="Eg - New Delhi, India">
            </div>

            <div class="form-group">
                <label for="healthConditionInput">Health Condition of Interest</label>
                <input type="condition" class="form-control" id="healthConditionInput" placeholder="Eg - Diabetes">
            </div>
            <div>
                <button type="submit" class="btn btn-default col-md-5" id="landing-search">Search</button>
                <a class="col-md-6">Advanced Search ></a>
            </div>
        </form>

        <div class="col-md-12" id="quick-link-icons">
            <div  class="col-md-4">
                <div class="center-block" style="text-align:center">
                    <a href="#">
                    <%= image_tag "cro", class: "media-object img-responsive-custom center-block"%>
                    <h5 class="media-heading">For CROs</h5>
                    </a>
                </div>
            </div>

            <div  class="col-md-4">
                <div class="center-block" style="text-align:center">
                    <a href="#">
                    <%= image_tag "physician", class: "media-object img-responsive-custom center-block"%>
                    <h5 class="media-heading">For Physicians</h5>
                    </a>
                </div>
            </div>

            <div  class="col-md-4">
                <div class="center-block" style="text-align:center">
                    <a href="#">
                    <%= image_tag "physician", class: "media-object img-responsive-custom center-block"%>
                    <h5 class="media-heading">For Volunteers</h5>
                    </a>
                </div>
            </div>
        </div>
    </section>

</div>

<%= render "footer" %>


